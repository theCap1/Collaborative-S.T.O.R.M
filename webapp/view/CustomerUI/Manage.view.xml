<mvc:View controllerName="storm.controller.CustomerUI.Manage" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m"
	xmlns:tnt="sap.tnt" height="100%">
	<List
		id="list"
		items="{/ad}"
		selectionChange="onSelectionChange"
		includeItemInSelection="true" 
		mode="SingleSelectMaster"
		itemPress="handleAddPress">
		<items
		itemPress="handleAddPress">
			<StandardListItem
				title="{name}"
				icon="data:image/bmp;base64, {img}"
				type="Active"
				press="handleAddPress"/>
		</items>
	</List>
</mvc:View>