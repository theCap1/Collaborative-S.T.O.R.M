<mvc:View controllerName="storm.controller.CustomerUI.Manage" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:tnt="sap.tnt"
	height="100%">
	<tnt:ToolHeader>
		<ToolbarSpacer width="20px"/>
		<tnt:ToolHeaderUtilitySeparator/>
		<ToolbarSpacer>
			<layoutData>
				<OverflowToolbarLayoutData priority="NeverOverflow" minWidth="20px"/>
			</layoutData>
		</ToolbarSpacer>
		<Button text="Add" type="Transparent" press="handleAddPopoverPress">
			<layoutData>
				<OverflowToolbarLayoutData priority="Low"/>
			</layoutData>
		</Button>
		<Button text="Edit" type="Transparent" press="handleEditPopoverPress">
			<layoutData>
				<OverflowToolbarLayoutData priority="Low"/>
			</layoutData>
		</Button>
		<Button text="Remove" type="Transparent" press="handleRemovePopoverPress">
			<layoutData>
				<OverflowToolbarLayoutData priority="Low"/>
			</layoutData>
		</Button>
	</tnt:ToolHeader>
	<MultiComboBox selectionChange="handleSelectionChange" selectionFinish="handleSelectionFinish" width="500px"
		items="{ path: '/ProductCollection', sorter: { path: 'Name' }}">
		<core:Item key="{ProductId}" text="{Name}"/>
	</MultiComboBox>
</mvc:View>