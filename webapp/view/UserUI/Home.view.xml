<mvc:View
	controllerName="storm.controller.UserUI.Home"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m"
	xmlns:xlink="http://www.w3.org/1999/xlink">
	<l:Grid defaultSpan="L4 M6 S6" class="sapUiSmallMarginTop">
		<l:content>
			<Panel class="sapUiResponsiveMargin" width="auto" height="11rem" accessibleRole="Region" backgroundDesign="Solid">
				<headerToolbar>
					<Toolbar class="whitePanelHeader" height="3rem">
						<Title text="Wilkommen + Name"/>
					</Toolbar>
				</headerToolbar>
				<content>
					<Text text="Here you can manage your account and get your rewards!"/>
				</content>
				<layoutData>
					<l:GridData span="L6 M12 S12" />
				</layoutData>
			</Panel>
			<Panel class="sapUiResponsiveMargin" width="auto" height="11rem" accessibleRole="Region">
				<content>
					<Image src="http://www.clearspider.com/wp-content/uploads/2015/12/RFID-and-the-Supply-Chain_cover-19-1.png" press="rfidPress" width="80%" height="97%"/>
				</content>
				<layoutData>
					<l:GridData span="L6 M12 S12" />
				</layoutData>
			</Panel>
			<Panel class="sapUiResponsiveMargin" width="auto" height="11rem" accessibleRole="Region" backgroundDesign="Solid">
				<headerToolbar>
					<Toolbar class="whitePanelHeader" height="3rem">
						<Title text="Account Balance"/>
					</Toolbar>
				</headerToolbar>
				<content>
					<core:Icon
					src="sap-icon://loan"
					size="3rem"
					color="#031E48"/>
					<Text class="subHeader" text=" Credit Count"/>
				</content>
				<layoutData>
					<l:GridData span="L6 M12 S12" />
				</layoutData>
			</Panel>
			<Panel class="sapUiResponsiveMargin" width="auto" height="11rem" accessibleRole="Region" backgroundDesign="Solid" enableScrolling="false">
				<headerToolbar>
					<Toolbar class="whitePanelHeader" height="3rem">
						<Title text="Always Informed"/>
					</Toolbar>
				</headerToolbar>
				<content>
					<l:VerticalLayout
						class="sapUiContentPadding"
						width="100%">
						<Link
						text="How to collect Credits"
						target="_blank"
						href="http://www.sap.com"/>
						<Link
						text="How to redeem Credits"
						target="_blank"
						href="http://www.sap.com"/>
						<Link
						text="How to manage your Account"
						target="_blank"
						href="http://www.sap.com"/>
					</l:VerticalLayout>
				</content>
				<layoutData>
					<l:GridData span="L6 M12 S12" />
				</layoutData>
			</Panel>
		</l:content>
	</l:Grid>
	
	<FlexBox class="sapUiResponsiveMargin" width="auto" justifyContent="Center">
		<items>
			<SlideTile class="sapUiResponsiveMargin">
				<tiles>
					<GenericTile
						backgroundImage="https://images-na.ssl-images-amazon.com/images/G/01/aplusautomation/vendorimages/98363ce3-e0d8-4abb-b808-a77050d3126d.png._CB304373939__SR285,285_.png"
						frameType="TwoByOne" press="pressOnTileOne">
						<tileContent>
							<TileContent footer="August 21, 2016">
								<content>
									<NewsContent
										contentText="SAP Unveils Powerful New Player Comparision Tool Exclusively on NFL.com"
										subheader="Today, SAP News">
									</NewsContent>
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
					<GenericTile
						backgroundImage="https://images-na.ssl-images-amazon.com/images/G/01/aplusautomation/vendorimages/98363ce3-e0d8-4abb-b808-a77050d3126d.png._CB304373939__SR285,285_.png"
						frameType="TwoByOne" press="pressOnTileTwo">
						<tileContent>
							<TileContent footer="August 21, 2016">
								<content>
									<NewsContent
										subheader="New Vouchers">
									</NewsContent>
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
				</tiles>
			</SlideTile>
			<SlideTile class="sapUiResponsiveMargin" transitionTime="250" displayTime="2500">
				<tiles>
					<GenericTile
						backgroundImage="https://images-na.ssl-images-amazon.com/images/G/01/aplusautomation/vendorimages/98363ce3-e0d8-4abb-b808-a77050d3126d.png._CB304373939__SR285,285_.png"
						frameType="TwoByOne" press="pressOnTileOne">
						<tileContent>
							<TileContent footer="August 21, 2016">
								<content>
									<NewsContent
										contentText="Wind Map: Monitoring Real-Time and Forecasted Wind Conditions across the Globe"
										subheader="Today, SAP News">
									</NewsContent>
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
					<GenericTile
						backgroundImage="https://images-na.ssl-images-amazon.com/images/G/01/aplusautomation/vendorimages/98363ce3-e0d8-4abb-b808-a77050d3126d.png._CB304373939__SR285,285_.png"
						frameType="TwoByOne">
						<tileContent>
							<TileContent footer="August 21, 2016">
								<content>
									<NewsContent
										subheader="New Vouchers">
									</NewsContent>
								</content>
							</TileContent>
						</tileContent>
					</GenericTile>
				</tiles>
			</SlideTile>
		</items>
		<layoutData>
			<l:GridData span="L6 M12 S12" />
		</layoutData>
	</FlexBox>
</mvc:View>